{
  "build": { "dockerfile": "Dockerfile" },
  "serverless": {
    "regions": ["hkg", "sfo", "nrt", "fra", "syd"]
  },
  "routes": [
    {
      "src": "/(feed|rss)(/.*)?$",
      "headers": {
        "Cache-Control": "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0",
        "Pragma": "no-cache",
        "Expires": "0"
      }
    },
    {
      "src": "/(.*)\\.(xml|rss|atom)$",
      "headers": {
        "Cache-Control": "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0",
        "Pragma": "no-cache",
        "Expires": "0"
      }
    }
  ]
}
